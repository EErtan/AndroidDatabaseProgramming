<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.nullcognition.chapter6bindingtoui"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SimpleContactsActivity"
            android:label="@string/title_activity_simple_contacts" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomBaseAdapterActivity"
            android:label="@string/title_activity_custom_mase_adapter" >
        </activity>
        <activity
            android:name=".CustomContactsActivity"
            android:label="@string/title_activity_custom_contacts" >
        </activity>
    </application>

</manifest>
